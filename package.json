{
  "name": "giftify",
  "version": "1.0.0",
  "description": "",
  "main": "server/server.js",
  "scripts": {
    "start": "cd server && npm run start",
    "develop": "concurrently \"npm run server:watch\" \"npm run client\"",
    "install": "cd server && npm install && cd ../client && npm install",
    "build": "concurrently \"npm run server:build\" \"npm run client:build\"",
    "render-build": "npm install && npm run build",
    "server:watch": "cd server && tsc -w",
    "server:build": "cd server && tsc",
    "client": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "lint": "eslint src --ext js,tsx --report-unused-disable-directives --max-warnings 0",
    "eslint": "eslint src"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.2",
    "lint": "^0.8.19"
  },
  "devDependencies": {
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "pretty": "^2.0.0",
    "wait-on": "^7.2.0"
  }
}
